        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hr.modulessy.mapper.SysEmpMapper">
    <select id="getById" resultType="cn.hr.modulessy.entity.SyEmp">
            select
            id,
            emp_name,
            emp_no,
            pwd,
            dept_id,
            remark,
            disabled
            from
            sy_emp
            where id = #{id}
    </select>

